{
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJS",
        "typeRoots": [
            "src/@types",
            "./node_modules/@types"
        ],
        "declaration": true,
        "outDir": "./lib/cjs",
        "importHelpers": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true
    },
    "include": [
        "./src"
    ],
    "ts-node": {
        "files": true,
        "transpileOnly": true
    }
}